<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 min-h-screen flex flex-col items-center p-8">
  
  <!-- Navbar -->
  <div class="w-full max-w-6xl mb-8">
    <a href="/" class="text-blue-500 hover:underline">&larr; Back to home</a>
  </div>

  <!-- Page Title -->
  <h1 class="text-4xl text-white font-semibold mb-10 tracking-tight">All Users</h1>

  <!-- User Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-6xl">
  <% if (users.length > 0) { %>
    <h2 class="text-white text-xl mb-6 col-span-full">
      Total Users: <%= users.length %>
    </h2>

    <% users.forEach(function(user) { %>
      <div class="bg-zinc-800 rounded-2xl p-5 shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
        <!-- User Image -->
        <div class="w-full h-52 rounded-xl overflow-hidden bg-gradient-to-tr from-zinc-700 to-zinc-600 mb-4">
          <img 
            src="<%= user.image %>" 
            alt="<%= user.name %>" 
            class="w-full h-full object-cover"
          />
        </div>

        <!-- User Info -->
        <h3 class="text-2xl font-semibold text-white tracking-tight mb-1"><%= user.name %></h3>
        <h5 class="text-zinc-400 mb-4"><%= user.email %></h5>

        <!-- Action Buttons -->
        <div class="flex gap-3">
          <a href="/edit/<%= user._id %>" class="flex-1 text-center bg-blue-600 text-white py-2 rounded-xl font-medium hover:bg-blue-700 transition">
            Edit
          </a>
          <a href="/delete/<%= user._id %>" class="flex-1 text-center bg-red-600 text-white py-2 rounded-xl font-medium hover:bg-red-700 transition">
            Delete
          </a>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <h2 class="text-white text-xl mb-6 col-span-full text-center">
      No Users Found
    </h2>
  <% } %>
</div>


</body>
</html>
