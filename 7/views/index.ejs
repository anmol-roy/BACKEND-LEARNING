<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dark Mode Task App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-gray-100 font-sans">

  <div class="main w-full min-h-screen flex flex-col items-center justify-start py-10 px-4">

    <!-- Form Section -->
    <div class="form bg-zinc-800 w-full max-w-md p-6 rounded-2xl shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-center">Add New Task</h2>
      <form action="/create" method="POST" class="space-y-4">
        <input
          type="text"
          name="title"
          placeholder="Enter task title"
          class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-gray-400"
          required
        />
        <textarea
          name="details"
          class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-gray-400"
          placeholder="Write your task details..."
          rows="4"
        ></textarea>
        <input
          type="submit"
          value="Add Task"
          class="bg-blue-600 hover:bg-blue-500 text-white font-medium px-4 py-2 rounded-md w-full cursor-pointer transition-colors"
        />
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="w-full max-w-3xl mt-10 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (files && files.length > 0) { %>
        <% files.forEach(function(file) { %>
          <div class="tasks space-y-2 p-5 bg-zinc-800 rounded-xl shadow-lg hover:shadow-blue-500/10 transition-shadow">
            <h1 class="text-white text-lg font-medium"><%= file.replace('.txt', '') %></h1>
            <div class="flex justify-between items-center">
              <a href="/file/<%= file %>" class="text-blue-400 hover:text-blue-300 text-sm">Read more â†’</a>
              <a href="/edit/<%= file %>" class="text-blue-400 hover:text-blue-300 text-sm underline">âœï¸ Edit</a>
              <form action="/delete/<%= file %>" method="POST" class="inline">
                <button type="submit" class="text-red-500 hover:text-red-400 text-sm ml-2">ğŸ—‘ï¸ Delete</button>
              </form>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="tasks space-y-2 p-5 bg-zinc-800 rounded-xl shadow-lg hover:shadow-blue-500/10 transition-shadow text-center">
          <h1 class="text-white text-lg font-medium">No Task Yet</h1>
          <a href="#" class="text-blue-400 hover:text-blue-300 text-sm">Create One â†’</a>
        </div>
      <% } %>
    </div>

  </div>

</body>
</html>
